{
    "name": "ChatTracker",
    "version": "0.1.0",
    "description": "tracking your chat activity",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["*://www.google.com/search*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://www.google.com/search*"],
        "js": ["contentScript.js"]
      }
    ],

    "action": {
      "default_icon": {
        "16": "icon_16.png",
        "32": "icon_32.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
      },
      "default_title": "My Chat Activity",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
}
